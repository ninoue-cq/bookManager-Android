<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_weight="1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="BookEditFragment">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:id="@+id/book_image"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="54dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image_send"
            android:id="@+id/send_button"
            android:layout_marginTop="48dp"
            android:layout_alignTop="@+id/book_image"
            android:layout_alignRight="@+id/main_layout"
            android:layout_alignEnd="@+id/main_layout"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:layout_below="@+id/send_button"
            android:id="@+id/main_layout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_title"
                android:id="@+id/text_book"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:windowSoftInputMode="adjustResize"
                android:layout_alignLeft="@+id/add_book_title"
                android:layout_alignStart="@+id/add_book_title" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/input_book_title"
                android:id="@+id/add_book_title"
                android:layout_below="@+id/text_book"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_price"
                android:id="@+id/text_price"
                android:textSize="12sp"
                android:layout_below="@+id/add_book_title"
                android:layout_alignLeft="@+id/add_book_title"
                android:layout_alignStart="@+id/add_book_title"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/input_book_price"
                android:id="@+id/add_book_price"
                android:layout_below="@+id/text_price"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_date"
                android:id="@+id/text_date"
                android:textSize="12sp"
                android:layout_below="@+id/add_book_price"
                android:layout_alignLeft="@+id/add_book_price"
                android:layout_alignStart="@+id/add_book_price"
                android:layout_marginTop="10dp" />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="@string/input_book_date"
                android:id="@+id/add_book_date"
                android:layout_below="@+id/text_date"
                android:layout_marginTop="10dp" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>