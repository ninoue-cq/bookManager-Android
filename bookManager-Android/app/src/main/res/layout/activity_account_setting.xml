<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:layout_weight="1"
    android:id="@+id/mainLayout"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".AccountSettingActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:id="@+id/relativeLayout"
            android:layout_below="@+id/btn_attach"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="80dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="メールアドレス"
                android:id="@+id/text_adress"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="12sp"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/mail_adress"
                android:layout_alignStart="@+id/mail_adress" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="書籍名を入力してください"
                android:id="@+id/mail_adress"
                android:layout_below="@+id/text_adress"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="パスワード"
                android:id="@+id/text_pass"
                android:textSize="12sp"
                android:layout_below="@+id/mail_adress"
                android:layout_alignLeft="@+id/mail_adress"
                android:layout_alignStart="@+id/mail_adress"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="パスワードを入力してください"
                android:id="@+id/pass_word"
                android:layout_below="@+id/text_pass"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="パスワード確認"
                android:id="@+id/text_pass_conf"
                android:textSize="12sp"
                android:layout_below="@+id/pass_word"
                android:layout_alignLeft="@+id/pass_word"
                android:layout_alignStart="@+id/pass_word"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="もう一度パスワードを入力してください"
                android:id="@+id/passConf"
                android:layout_below="@+id/text_pass_conf"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>